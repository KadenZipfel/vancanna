<% include partials/header %>

<div class="container">
  <div class="jumbotron text-center">
    <h1>Welcome to Vancanna</h1>
    <h3>Home of the best dispensaries and strains in Vancouver</h3>
    <a href="/about" class="btn btn-default">Learn More</a>
  </div>
  <h1 class="text-center">Top Dispensaries</h1>
  <hr>
  <% dispensaries.forEach((dispensary) => { %>
    <div class="col-md-3">
      <div class="thumbnail">
        <a href="dispensaries/<%= dispensary._id %>">
          <img class="dispensaries__img" src="<%= dispensary.image %>" alt="<%= dispensary.name %>">
        </a>
        <a href="dispensaries/<%= dispensary._id %>">
          <h3 class="text-center dispensaries__name"><%= dispensary.name %></h3>
        </a>
      </div>
    </div>
  <% }); %>
  <a class="btn btn-default pull-right" href="/dispensaries">View all dispensaries</a>
</div>

<% include partials/footer %>