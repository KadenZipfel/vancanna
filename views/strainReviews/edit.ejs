<% include ../partials/header %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1 style="text-align: center;">Edit Review</h1>
    <div class="well login-well">
      <p>Fields with an asterisk are required.</p>
      <form action="/dispensaries/<%= dispensary_id %>/strains/<%= strain_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="textarea" name="text" placeholder="Text *" autocomplete="off" value="<%= review.text %>" required>
        </div>
        <div class="form-group">
          <select name="rating" class="form-control" required>
            <option value="1"
              <% if(review.rating === 1) { %>
                selected="selected"
              <% } %>
            >&#9733;</option>
            <option value="2"
              <% if(review.rating === 2) { %>
                selected="selected"
              <% } %>
            >&#9733; &#9733;</option>
            <option value="3"
              <% if(review.rating === 3) { %>
                selected="selected"
              <% } %>
            >&#9733; &#9733; &#9733;</option>
            <option value="4"
              <% if(review.rating === 4) { %>
                selected="selected"
              <% } %>
            >&#9733; &#9733; &#9733; &#9733;</option>
            <option value="5"
              <% if(review.rating === 5) { %>
                selected="selected"
              <% } %>
            >&#9733; &#9733; &#9733; &#9733; &#9733;</option>
          </select>
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="flavors" value="<%= review.flavors %>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="effects" value="<%= review.effects %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>