<% include ../partials/header %>

<div class="container">
  <div class="strain">
    <img class="strain__img" src="<%= strain.image %>" alt="<%= strain.name %>">
    <div class="strain__info">
      <h2 class="text-center"><%= strain.name %></h2>
      <p class="text-center"><%= strain.type %></p>
      <p class="text-center"><%= strain.description %></p>
      <p class="text-center"><%= avgRating %> &#9733;</p>
      <% if(strain.author.id.equals(session.userId) || session.userId && user.moderator == true) { %>
        <div class="inline">
          <a href="<%= strain._id %>/edit">Edit Strain</a>
          <form action="/dispensaries/<%= dispensary_id %>/strains/<%= strain._id %>?_method=DELETE" method="POST"><button>Delete Strain</button></form>
        </div>
      <% } %>
    </div>
  </div>
  <hr>
  <div class="col-md-4">
    <h3 class="text-center">Reviews</h3>
    <a class="pull-right" href="<%= strain._id %>/reviews/new">Leave a review</a>
    <hr>
    <% strain.reviews.forEach((review) => { %>
      <div class="review">
        <h4 class="review__author"><%= review.author.username %></h4>
        <p class="review__rating pull-right"><%= review.rating %> &#9733;</p>
        <p class="review__text"><%= review.text %></p>
        <% if(review.author.id.equals(session.userId) || session.userId && user.moderator == true) { %>
          <div class="inline">
            <a href="<%= strain._id %>/reviews/<%= review._id %>/edit">Edit Review</a>
            <form action="/dispensaries/<%= dispensary_id %>/strains/<%= strain._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST"><button>Delete Review</button></form>
          </div>
        <% } %>
      </div>
    <% }) %>
  </div>
  <div class="col-md-8">
    <div class="strains">
        <h3 class="text-center strains__header">Other Strains You Might Like...</h3>
        <div class="strains__cards">
          <% strains.forEach((strain) => { %>
            <div class="col-md-6">
              <div class="thumbnail">
                <a href="/dispensaries/<%= dispensary_id %>/strains/<%= strain._id %>"><img src="<%= strain.image %>" alt="<%= strain.name %>"></a>
                <a class="strains__title" href="/dispensaries/<%= dispensary_id %>/strains/<%= strain._id %>"><h3 class="text-center"><%= strain.name %></h3></a>
              </div>
            </div>
          <% }) %>
        </div>
        <% if(session.userId && user.admin || session.userId && user.moderator == true) { %>
          <a class="text-center btn btn-default strains__btn" href="/dispensaries/<%= dispensary_id %>/strains/new">Add a new strain</a>
        <% } %>
      </div>
  </div>
</div>

<% include ../partials/footer %>