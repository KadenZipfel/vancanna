<% include ../partials/header %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1 style="text-align: center;">Edit Strain: <%= strain.name %></h1>
    <div class="well login-well">
      <p>Fields with an asterisk are required.</p>
      <form action="/dispensaries/<%= dispensary_id %>/strains/<%= strain._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="name" placeholder="Name *" autocomplete="off" value="<%= strain.name %>" required>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="description" placeholder="Description *" value="<%= strain.description %>" required>
        </div>
        <div class="form-group">
          <select name="type" class="form-control" required>
            <option value="Indica"
              <% if(strain.type === "Indica") { %>
                selected="selected"
              <% } %>
            >Indica</option>
            <option value="Sativa"
              <% if(strain.type === "Sativa") { %>
                selected="selected"
              <% } %>            
            >Sativa</option>
            <option value="Hybrid"
              <% if(strain.type === "Hybrid") { %>
                selected="selected"
              <% } %>
            >Hybrid</option>
          </select>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="image" placeholder="Image URL *" value="<%= strain.image %>" required>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="thcContent" value="<%= strain.thcContent %>">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="cbdContent" value="<%= strain.cbdContent %>">
          </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>