<% include ../partials/header %>

<div class="container">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <h1 style="text-align: center;">Edit Review</h1>
    <div class="well login-well">
      <form action="/dispensaries/<%= dispensary_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="textarea" name="text" placeholder="Text" autocomplete="off" value="<%= review.text %>">
        </div>
        <div class="form-group">
          <select name="rating" class="form-control">
            <option value="1"
              <% if(review.rating === 1) { %>
                selected="selected"
              <% } %>
            >1</option>
            <option value="2"
              <% if(review.rating === 2) { %>
                selected="selected"
              <% } %>
            >2</option>
            <option value="3"
              <% if(review.rating === 3) { %>
                selected="selected"
              <% } %>
            >3</option>
            <option value="4"
              <% if(review.rating === 4) { %>
                selected="selected"
              <% } %>
            >4</option>
            <option value="5"
              <% if(review.rating === 5) { %>
                selected="selected"
              <% } %>
            >5</option>
          </select>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>