<% include ../partials/header %>

<div class="container">
  <div class="thumbnail">
    <img src="<%= dispensary.image %>" alt="<%= dispensary.name %>">
    <h1><%= dispensary.name %></h1>
    <p><%= dispensary.location %></p>
    <p><%= dispensary.description %></p>
    <a href="/dispensaries/<%= dispensary._id %>/edit">Edit Dispensary</a>
    <form action="/dispensaries/<%= dispensary._id %>?_method=DELETE" method="POST"><button>Delete Dispensary</button></form>
  </div>
  <h3>Strains</h3>
  <a href="/dispensaries/<%= dispensary._id %>/strains/new">Add a new strain</a>
  <% dispensary.strains.forEach((strain) => { %>
    <div class="thumbnail">
      <a href="/dispensaries/<%= dispensary._id %>/strains/<%= strain._id %>"><img src="<%= strain.image %>" alt="<%= strain.name %>"></a>
      <a href="/dispensaries/<%= dispensary._id %>/strains/<%= strain._id %>"><h4><%= strain.name %></h4></a>
      <p><%= strain.type %></p>
      <p><%= strain.description %></p>
      <a href="/dispensaries/<%= dispensary._id %>/strains/<%= strain._id %>/edit">Edit Strain</a>
      <form action="/dispensaries/<%= dispensary._id %>/strains/<%= strain._id %>?_method=DELETE" method="POST"><button>Delete Strain</button></form>
    </div>
  <% }) %>
  <div class="well">
    <h4>Reviews</h4>
    <a href="<%= dispensary._id %>/reviews/new">Leave a Review</a>
    <% dispensary.reviews.forEach((review) => { %>
      <p><%= review.text %></p>
      <p><%= review.rating %></p>
      <a href="<%= dispensary._id %>/reviews/<%= review._id %>/edit">Edit Review</a>
      <form action="/dispensaries/<%= dispensary._id %>/strains/<%= strain_id %>/reviews/<%= review._id %>?_method=DELETE" method="POST"><button>Delete Review</button></form>
    <% }) %>
  </div>
</div>

<% include ../partials/footer %>